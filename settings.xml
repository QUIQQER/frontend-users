<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <settings>

        <config>

            <section name="userProfile">
                <conf name="showMyData">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="showPasswordChange">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="showAddress">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="showAddressManager">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="showDeleteAccount">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
            </section>

            <section name="disable">
                <conf name="hashLifetime">
                    <type><![CDATA[int]]></type>
                    <defaultvalue>3600</defaultvalue>
                </conf>
            </section>

            <section name="registration">
                <conf name="userActivation">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="autoLoginOnActivation">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="defaultGroups">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="sendInfoMailOnRegistrationTo">
                    <type><![CDATA[String]]></type>
                </conf>
                <conf name="mailFromText">
                    <type><![CDATA[string]]></type>
                    <defaultvalue><![CDATA[QUIQQER System]]></defaultvalue>
                </conf>
                <conf name="mailFromAddress">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="visitRegistrationSiteBehaviour">
                    <type><![CDATA[string]]></type>
                    <defaultvalue><![CDATA[showProfile]]></defaultvalue>
                </conf>
                <conf name="usernameInput">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="addressInput">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="activationVerificationValidityDuration">
                    <type><![CDATA[integer]]></type>
                    <defaultvalue>1440</defaultvalue>
                </conf>
                <conf name="userWelcomeMail">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="autoRedirectOnSuccess">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="addressFields">
                    <type><![CDATA[string]]></type>
                </conf>
            </section>

            <section name="registrars">
                <conf name="registrarSettings">
                    <type><![CDATA[String]]></type>
                </conf>
            </section>
        </config>

        <window>
            <title>
                <locale group="quiqqer/frontend-users" var="menu.title"/>
            </title>
            <params>
                <icon>fa fa-cogs</icon>
            </params>

            <categories>

                <category name="userProfile">
                    <text>
                        <locale group="quiqqer/frontend-users" var="settings.category.userProfile.title"/>
                    </text>
                    <icon>fa fa-user</icon>

                    <settings title="userProfile_section" name="userProfile_section">
                        <title>
                            <locale group="quiqqer/frontend-users" var="settings.section.userProfile.title"/>
                        </title>

                        <input conf="userProfile.showMyData" type="checkbox">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.showMyData.title"/>
                            </text>
                        </input>
                        <input conf="userProfile.showPasswordChange" type="checkbox">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.showPasswordChange.title"/>
                            </text>
                        </input>
                        <input conf="userProfile.showAddress" type="checkbox">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.showAddress.title"/>
                            </text>
                        </input>
                        <input conf="userProfile.showAddressManager" type="checkbox">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.showAddressManager.title"/>
                            </text>
                        </input>
                        <input conf="userProfile.showDeleteAccount" type="checkbox">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.showDeleteAccount.title"/>
                            </text>
                        </input>
                    </settings>
                </category>

                <category name="registration">
                    <text>
                        <locale group="quiqqer/frontend-users" var="settings.category.registration.title"/>
                    </text>
                    <icon>fa fa-cogs</icon>

                    <settings title="registration_section" name="registration_section">
                        <title>
                            <locale group="quiqqer/frontend-users" var="settings.section.registration.title"/>
                        </title>

                        <input conf="registration.defaultGroups" type="text" data-qui="controls/groups/Select">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.defaultGroups.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.defaultGroups.description"/>
                            </description>
                        </input>

                        <input conf="registration.sendInfoMailOnRegistrationTo" type="text" data-qui="controls/email/Select">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.sendInfoMailOnRegistrationTo.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.sendInfoMailOnRegistrationTo.description"/>
                            </description>
                        </input>

                        <input conf="registration.usernameInput" type="checkbox">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.usernameInput.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.usernameInput.description"/>
                            </description>
                        </input>

                        <input conf="registration.mailFromText" type="text">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.mailFromText.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.mailFromText.description"/>
                            </description>
                        </input>

                        <input conf="registration.mailFromAddress" type="text">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.mailFromAddress.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.mailFromAddress.description"/>
                            </description>
                        </input>

                        <input conf="registration.userWelcomeMail" type="checkbox">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.userWelcomeMail.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.userWelcomeMail.description"/>
                            </description>
                        </input>

                        <input conf="registration.autoLoginOnActivation" type="checkbox">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.autoLoginOnActivation.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.autoLoginOnActivation.description"/>
                            </description>
                        </input>

                        <input conf="registration.activationVerificationValidityDuration" type="number">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.activationVerificationValidityDuration.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.activationVerificationValidityDuration.description"/>
                            </description>
                        </input>

                        <select conf="registration.visitRegistrationSiteBehaviour">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.visitRegistrationSiteBehaviour.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.visitRegistrationSiteBehaviour.description"/>
                            </description>
                            <option value="nothing">
                                <locale group="quiqqer/frontend-users" var="settings.visitRegistrationSiteBehaviour.option.nothing"/>
                            </option>
                            <option value="showProfile">
                                <locale group="quiqqer/frontend-users" var="settings.visitRegistrationSiteBehaviour.option.showProfile"/>
                            </option>
                            <option value="showMessage">
                                <locale group="quiqqer/frontend-users" var="settings.visitRegistrationSiteBehaviour.option.showMessage"/>
                            </option>
                        </select>

                        <input conf="registration.autoRedirectOnSuccess" type="text" class="project-site">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.autoRedirectOnSuccess.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.autoRedirectOnSuccess.description"/>
                            </description>
                        </input>

                    </settings>
                </category>

                <category name="registrationAddress">
                    <text>
                        <locale group="quiqqer/frontend-users" var="settings.category.registrationAddress.title"/>
                    </text>
                    <icon>fa fa-address-card-o</icon>

                    <settings title="registrationAddress_section" name="registrationAddress_section">
                        <title>
                            <locale group="quiqqer/frontend-users" var="settings.section.registrationAddress.title"/>
                        </title>

                        <input conf="registration.addressInput" type="checkbox">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.addressInput.title"/>
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users" var="settings.addressInput.description"/>
                            </description>
                        </input>

                        <input conf="registrars.addressFields" type="text" data-qui="package/quiqqer/frontend-users/bin/controls/settings/AddressFields" label="false">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.addressFields.title"/>
                            </text>
                        </input>

                    </settings>
                </category>

                <category name="registrars">
                    <text>
                        <locale group="quiqqer/frontend-users" var="settings.category.registrars.title"/>
                    </text>
                    <icon>fa fa-user-plus</icon>

                    <settings title="registrars_section" name="registrars_section">
                        <title>
                            <locale group="quiqqer/frontend-users" var="settings.section.registrars.title"/>
                        </title>

                        <input conf="registrars.registrarSettings" type="text" data-qui="package/quiqqer/frontend-users/bin/controls/settings/Registrars" label="false">
                            <text>
                                <locale group="quiqqer/frontend-users" var="settings.registrarSettings.title"/>
                            </text>
                        </input>

                    </settings>
                </category>

            </categories>
        </window>

    </settings>
</quiqqer>
