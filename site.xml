<?xml version="1.0" encoding="UTF-8"?>
<site>
    <types>
        <type type="types/registration" icon="fa fa-user-plus">
            <locale group="quiqqer/frontend-users" var="admin.types.registration"/>
        </type>
        <type type="types/login" icon="fa fa-sign-in">
            <locale group="quiqqer/frontend-users" var="admin.types.login"/>
        </type>
        <type type="types/profile" icon="fa fa-user">
            <locale group="quiqqer/frontend-users" var="admin.types.profile"/>
        </type>

        <type type="types/registrationSignUp" icon="fa fa-user-plus">
            <locale group="quiqqer/frontend-users" var="admin.types.registrationSignUp"/>

            <!-- extra attributes -->
            <attributes>
                <attribute>quiqqer.sign.up.background</attribute>
                <attribute>quiqqer.sign.up.registrars</attribute>
                <attribute>quiqqer.sign.up.logo</attribute>
                <attribute>quiqqer.sign.up.logoUrl</attribute>
                <attribute default="1">quiqqer.sign.up.fullscreen</attribute>
            </attributes>

            <!-- list settings -->
            <settings>

                <category name="sign-up-settings">
                    <settings>
                        <title>
                            <locale group="quiqqer/frontend-users"
                                    var="quiqqer.sign.up.settings.title"
                            />
                        </title>

                        <input conf="quiqqer.sign.up.fullscreen"
                               type="checkbox"
                        >
                            <text>
                                <locale group="quiqqer/frontend-users"
                                        var="admin.types.registrationSignUp.setting.fullscreen"
                                />
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users"
                                        var="admin.types.registrationSignUp.setting.fullscreen.description"
                                />
                            </description>
                        </input>

                        <input conf="quiqqer.sign.up.background" class="media-image">
                            <text>
                                <locale group="quiqqer/frontend-users"
                                        var="admin.types.registrationSignUp.setting.background"
                                />
                            </text>
                        </input>

                        <input conf="quiqqer.sign.up.logo" class="media-image">
                            <text>
                                <locale group="quiqqer/frontend-users"
                                        var="admin.types.registrationSignUp.setting.logo"
                                />
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users"
                                        var="admin.types.registrationSignUp.setting.logo.description"
                                />
                            </description>
                        </input>

                        <input conf="quiqqer.sign.up.logoUrl"
                               data-qui="controls/projects/project/site/Input"
                               data-qui-options-external="1"
                        >
                            <text>
                                <locale group="quiqqer/frontend-users"
                                        var="admin.types.registrationSignUp.setting.logoUrl"
                                />
                            </text>
                            <description>
                                <locale group="quiqqer/frontend-users"
                                        var="admin.types.registrationSignUp.setting.logoUrl.description"
                                />
                            </description>
                        </input>

                        <input conf="quiqqer.sign.up.registrars"
                               type="hidden"
                               data-qui="package/quiqqer/frontend-users/bin/controls/settings/SignUpRegistrars"
                               label="0"
                        >
                            <text>
                                <locale group="quiqqer/frontend-users"
                                        var="admin.types.registrationSignUp.setting.registrars"
                                />
                            </text>
                        </input>
                    </settings>
                </category>

            </settings>

        </type>
    </types>
</site>